<div class="row">
  <div class="span12">
    <div class="row">
      <div class="span12">
        <table class="table table-striped table-bordered table-condensed">
          <thead>
          <th>Title</th>
          <th>Summary</th>
          </thead>
          <tbody>
            {{#each post in controller.paginatedContent}}
            <tr>
              <td>{{post.title}}</td>
              <td>{{post.summary}}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
    <div class="row">
      <div name="prev">{{#linkTo 'post.page' prevPage target="controller"}}Prev{{/linkTo}}</div>
      <ul class="pagination gui-text">
        {{#each posts}}
          {{view App.PaginationView contentBinding="this"}}
        {{/each}}
      </ul>
      <div name="next">{{#linkTo 'post.page' nextPage target="controller"}}Next{{/linkTo}}</div>
    </div>
  </div>
</div>


<div>
  <p>Selected Post</p>
  {{outlet}}
</div>
